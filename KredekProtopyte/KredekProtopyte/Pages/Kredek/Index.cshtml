@page
@using KredekProtopyte.Data
@using Microsoft.AspNetCore.Mvc.Rendering
@model KredekProtopyte.Pages.Kredek.IndexModel
@{
    ViewData["Title"] = "Index";
}

@foreach (var item in Model.PageContent.Elements)
{
    if (item is ImageAndTextTemplate)
    {
        @await Html.PartialAsync("TemplatesPartials/_BannerImageAndTextPartial", (ImageAndTextTemplate)item)
    }
    else
    if (item is BannerTemplate)
    {
        @await Html.PartialAsync("TemplatesPartials/_BannerTemplatePartial", (BannerTemplate)item)
    }
}
@await Html.PartialAsync("TemplatesPartials/_BannerTextAndLinksPartial")